{
    "name": "VAL: The plan validation system",
    "description": "Tools for parsing, validating, and analyzing plans and planning models.",
    "homepage": "https://github.com/KCL-Planning/VAL",
    "install-size": "3M",
    "dependencies": [],
    "endpoint": {
        "services": {
            "validate": {
                "args": [
                    {
                        "name": "domain",
                        "type": "file",
                        "description": "domain file"
                    },
                    {
                        "name": "problem",
                        "type": "file",
                        "description": "problem file"
                    },
                    {
                        "name": "plan",
                        "type": "file",
                        "description": "plan to validate"
                    }
                ],
                "call": "val Validate -v {domain} {problem} {plan} > val.log 2>&1",
                "return": {
                    "type": "log",
                    "files": "val.log"
                }
            }
        }
    }
}